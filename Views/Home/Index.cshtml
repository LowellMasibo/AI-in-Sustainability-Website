<section class="ai-section upload-section">
    <div class="content-wrapper">
        <div class="container"> 
            <div class="row justify-content-center text-center mb-4">
                <div class="col-md-6">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <h4 class="upload-heading">Upload AI Images</h4>
                        <p class="upload-text">
                            You can now click
                            <a asp-area="" asp-controller="AIImages" asp-action="Create" class="upload-link">here</a>
                            to upload an AI image.
                        </p>
                    }
                    else
                    {
                        <h4 class="upload-heading">Upload AI Images</h4>
                        <p class="upload-text">
                            Please 
                            <a asp-area="Identity" asp-page="/Account/Login" class="upload-link">login</a> or
                            <a asp-area="Identity" asp-page="/Account/Register" class="upload-link">register</a>
                            to upload your AI images.
                        </p>
                    }
                </div>
            </div>

            <div class="row upload-images-row g-2">
                @foreach (var item in Model)
                {
                    <div class="col-md-2 mb-4"> 
                        <a asp-controller="AIImages" asp-action="Index" asp-route-itemid="@item.Id">
                            <div class="upload-container">
                                <div class="image-placeholder">
                                    <span>@item.ImageGenerator</span>
                                </div>
                                <img src="~/images/@item.Filename" class="generated-image" alt="@item.Prompt" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}
