@model AspNetCoreMvcWebSite.Models.AIImages

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/aiimages.css" asp-append-version="true" />
}

<div class="delete-page">
    <h4 class="main-heading">Delete AI Image</h4>
    <hr class="yellow-line">
    <h3 class="sub-heading">Are you sure you want to delete this?</h3>
    <div class="row text-white fs-5">
    <hr class="yellow-line">
    
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">Prompt</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Prompt)</dd>

            <dt class="col-sm-4 fw-bold">Image Generator</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ImageGenerator)</dd>

            <dt class="col-sm-4 fw-bold">Upload Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UploadDate)</dd>

            <dt class="col-sm-4 fw-bold">Filename</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Filename)</dd>

            <dt class="col-sm-4 fw-bold">Likes</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Like)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
